import { SEO } from "astro-seo";
const canonicalURL = new URL(Astro.url.pathname, Astro.url.origin).toString();
const resolvedImageWithDomain = new URL(
  "/image.jpeg",
  Astro.url.origin
).toString();

interface Props {
  title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from "astro:transitions";
import preload from "astro-preload";
import Glow from "../components/Glow";
const makeTitle = title ? title : "Rohit Bedse";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Rohit Bedse - Aspiring Data Scientist. Explore my portfolio showcasing expertise in Python, Machine Learning, and Data Analysis. Specializing in predictive modeling, data visualization, and turning data into actionable insights. With a strong command of Python, SQL, Scikit-learn, and analytics tools, I bring a passion for solving real-world problems through data-driven solutions. Let's connect and discuss how I can contribute to your data science projects."
    />
    <meta
      name="keywords"
      content="Rohit Bedse, Aspiring Data Scientist, Python, Machine Learning, Data Analysis, Predictive Modeling, Data Visualization, Scikit-learn, Pandas, NumPy, SQL, ETL, Business Intelligence, Data Cleaning, Jupyter Notebook, Matplotlib, Seaborn, Streamlit, MLflow, Kaggle, Data Science Portfolio, Analytics, Statistical Analysis, Feature Engineering, Cross-validation, Hyperparameter Tuning, Model Evaluation, Regression, Classification, Neural Networks, Data Insights, Problem Solving, Analytical Thinking, Data-driven Decision Making, AI/ML Intern, Edunet Foundation, IBM SkillsBuild, Google Coursera, AWS Cloud Foundations, SQL Databases, B.Tech Computer Science, Portfolio, Tech Enthusiast, Project Showcase, Data Science Projects, Swiggy Delivery Time Prediction, YouTube Sentiment Analysis, Flights Dashboard, Data Science Blog, Machine Learning Blog, Python Programming, Data Visualization, Technical Skills, Professional Experience, Open Source Contributions, Personal Projects, Code Quality, Collaboration, GitHub, Data Science Tools, Innovative Solutions, Data Science Career, Building ML Models, Data Portfolio Showcase, Data Scientist Journey, Data Quality Standards, Data Science Process, Professional Data Scientist, Data Science Expertise, Programming Languages, Data Technologies, Coding Standards, Data Science Tools, Software Development Tools, Developer Portfolio Showcase, Data Science Experience, Python Portfolio, ML Portfolio, Data Science Portfolio, Personal Website, SEO-Friendly Portfolio, Optimized Code, Data Science Best Practices"
    />
    <meta name="author" content="Rohit Bedse" />
    <meta name="theme-color" content="#0a0a0a" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.jpg" />
    <meta
      name="google-site-verification"
      content="KkglhaceVC1IkFNPA51lIA0cEBNfoCwubuEapRU5UTY"
    />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={makeTitle}
      description="A portfolio website built with latest technologies by Rohit Bedse"
      canonical={canonicalURL}
      twitter={{
        creator: "@rohit",
        site: "@rohitk",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Rohit Bedse`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Rohit Bedse",
        },
        optional: {
          description: `A portfolio website built with latest technologies by Rohit Bedse`,
        },
      }}
    />
    <script
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-S9TKKTL84G"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-N6SG31LQ11");
    </script>

    <title>{title}</title>
  </head>
  <body>
    <Glow client:only />
    <slot />

    <style is:global>
      * {
      }
      img {
        content-visibility: auto;
      }
      body {
        cursor: url("/cursor.png"), auto;
        font-family: "Poppins", sans-serif;
        background: #0a0a0a;
        background-size: 22px 22px;
        overflow-x: hidden;
      }
      ::-webkit-scrollbar {
        width: 10px;
      }

      ::-webkit-scrollbar-track {
        background-color: rgba(20, 20, 20);
        -webkit-border-radius: 10px;
        border-radius: 10px;
      }

      ::-webkit-scrollbar-thumb {
        -webkit-border-radius: 10px;
        border-radius: 10px;
        background: #5b5b5b;
      }
    </style>
    <script src="../utils/aos.js"></script>
  </body>
</html>
